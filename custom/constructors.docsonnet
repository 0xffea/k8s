local d = {
  fn(args, help=''): {
    args: args,
    help: help,
  },
  arg(key, default=null): { key: key, default: default },
};

{
  core+: {
    v1+: {
      container+: {
        new: d.fn([
          d.arg('name'),
          d.arg('image'),
        ]),
      },
    },
  },
  apps+: {
    v1+: {
      deployment+: {
        new: d.fn([
          d.arg('name'),
          d.arg('containers'),
          d.arg('replicas', 1),
        ]),
      },
    },
  },
}
